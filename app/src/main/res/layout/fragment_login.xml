<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="25dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/creativa"/>

    <LinearLayout
        android:id="@+id/userNameLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/imageView"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_background"
            android:padding="7dp"
            android:src="@drawable/outline_person_24" />

        <EditText
            android:id="@+id/emailAsUserName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-1dp"
            android:layout_weight="1"
            android:background="@drawable/text_background"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:hint="Username"
            android:paddingStart="10dp"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/passwordLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/userNameLayout"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_background"
            android:padding="7dp"
            android:src="@drawable/outline_lock_24" />

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-1dp"
            android:layout_weight="1"
            android:background="@drawable/text_background"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/signin_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/passwordLayout"
        android:background="@drawable/button_background"
        android:text="Sign In"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin_btn"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password?"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/btn_sign_in_facebook"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/forgot_password"
        android:layout_marginTop="24dp"
        android:background="@drawable/face_book_button_background"
        android:drawableStart="@drawable/icon_facebook"
        android:paddingStart="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Sign In with Facebook"
        android:textColor="#165CC5" />
    <TextView
        android:id="@+id/btn_sign_in_google"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/btn_sign_in_facebook"
        android:layout_marginTop="24dp"
        android:background="@drawable/google_button_background"
        android:drawableStart="@drawable/icon_google"
        android:paddingStart="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Sign In with Google"
        android:textColor="#F44336" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Don't have an account?" />
        <TextView
            android:id="@+id/createAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:text=" Create One" />
    </LinearLayout>

</RelativeLayout>